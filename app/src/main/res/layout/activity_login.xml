<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/login_bg2"
    tools:context="com.ourbuaa.buaahelper.LoginActivity"

    >
    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/loginPAS">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:id="@+id/layout_IDinput">


            <EditText

                android:id="@+id/LoginUsername"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="8"
                android:background="@color/White"
                android:ems="10"
                android:hint="@string/prompt_Username"

                android:inputType="textPersonName" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_IDinput">
    <EditText
        android:layout_width="wrap_content"
        android:layout_weight="8"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:background="@color/White"
        android:hint="@string/prompt_password"
        android:ems="20"

        android:id="@+id/LoginPassword"
        />
        </LinearLayout>
        </RelativeLayout>
    <Button
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="登录"
        android:layout_marginTop="34dp"
        android:background="@color/color_Swipe_Fav_Button_For_List"
    android:id="@+id/LoginButton"
        android:layout_below="@+id/loginPAS"
        android:layout_alignParentStart="true">

</Button>

    <Button
        android:id="@+id/AutoLoginButton"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_above="@+id/OfflineModeBtn"
        android:layout_alignParentEnd="true"
        android:text="使用上次账号自动登录" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:background="@color/colorAccent"
        android:textColor="@color/White"
        android:id="@+id/RegisterButton"
        android:layout_below="@+id/LoginButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_alignParentEnd="true">

    </Button>

    <Button
        android:id="@+id/OfflineModeBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="离线模式"></Button>


</RelativeLayout>
